<odoo>
    <!--home page brands snippet after header -->
    <template id="ks_product_slider_multiple" name="All Sliders">
        <section data-js="ks_snippet_slider_options" class="website_sale_product_slider">
            <div class="ks_product_slider_multiple" data-snippet_type="0" data-id="0"
                 data-collection_name="Please select Data First" data-snippet_layout="0" >
                <a href="#" data-action="ks_product_slider_multi" class="ks_product_slider_multi"
                   data-product_slider_configure=""></a>
            </div>
        </section>
    </template>


    <template id="ks_product_slider_options" name="Product Slider Snippet Options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js='product_slider_actions'
                 data-selector=".ks_product_slider_multiple">
                <a tabindex="-1" href="#" class="dropdown-item js_product_slider" data-product_slider_configure="">
                    Modify
                </a>
            </div>
        </xpath>
    </template>


    <template id="ks_product_slider_animation_options" inherit_id="website.snippet_options" name="Product slider Snippet animation Options">
    <xpath expr="." position="inside">
        <div data-selector=".ks_product_slider_multiple"
            data-no-check="true">
            <we-collapse-area class="animations_ppr_submenu">
                <we-toggler>
                    <i class="fa fa-spinner fa-pulse"/> Animation Options
                </we-toggler>
                <we-collapse data-no-preview="true">
                    <label>Simple Animations
                    <we-button  data-select-class="animated flash">flash</we-button>
                    <we-button data-select-class="animated bounce">bounce</we-button>
                    <we-button data-select-class="animated pulse">pulse</we-button>
                      </label>
                    <label>Fading Entrances
                     <we-button  data-select-class="animated fadeIn">fadeIn</we-button>
                    <we-button data-select-class="animated fadeInDown">fadeInDown</we-button>
                    <we-button data-select-class="animated fadeInLeft">fadeInLeft</we-button>
                     <we-button data-select-class="animated fadeInUp">fadeInUp</we-button>
                    <we-button data-select-class="animated fadeInRight">fadeInRight</we-button>
                    </label>
                     <label>Sliding Entrances
                     <we-button  data-select-class="animated slideInDown">slideInDown</we-button>
                    <we-button data-select-class="animated slideInLeft">slideInLeft</we-button>
                    <we-button data-select-class="animated slideInUp">slideInUp</we-button>
                     <we-button data-select-class="animated slideInRight">slideInRight</we-button>
                    </label>
                    <label>Zooming Entrances
                     <we-button  data-select-class="animated zoomIn">zoomIn</we-button>
                    <we-button data-select-class="animated zoomInDown">zoomInDown</we-button>
                    <we-button data-select-class="animated zoomInLeft">zoomInLeft</we-button>
                     <we-button data-select-class="animated zoomInUp">zoomInUp</we-button>
                    <we-button data-select-class="animated zoomInRight">zoomInRight</we-button>
                    </label>
                </we-collapse>
            </we-collapse-area>
        </div>
    </xpath>
</template>

</odoo>
